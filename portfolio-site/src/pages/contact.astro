---
import BaseLayout from "../layouts/BaseLayout.astro";
import CallToAction from "../components/CallToAction.astro";
import ContactCTA from "../components/ContactCTA.astro";
import Hero from "../components/Hero.astro";
import Icon from "../components/Icon.astro";
---

<BaseLayout
	title="Contact | Matthew Aisthorpe"
	description="Get in touch with Matthew Aisthorpe about digital delivery, XR, or AI-enabled platforms."
>
	<main class="wrapper stack gap-12 contact">
		<section class="stack gap-6">
			<Hero
				title="Let's build something together"
				tagline="Whether you're exploring XR, AI-enabled platforms, or need delivery leadership, I'd love to hear about it."
			/>
		</section>

		<section class="contact-panel">
			<form
				id="contact-form"
				class="contact-form stack gap-5"
				action="https://formspree.io/f/mblnbrzn"
				method="POST"
				novalidate
			>
				<p class="lede">
					Share a few details about your project, collaboration, or
					problem you are trying to solve. I typically respond within one
					business day.
				</p>
				<div class="field">
					<label for="name">Your name</label>
					<input
						id="name"
						name="name"
						type="text"
						autocomplete="name"
						placeholder="Alex Smith"
						required
					/>
				</div>
				<div class="field">
					<label for="email">Your email</label>
					<input
						id="email"
						name="email"
						type="email"
						autocomplete="email"
						placeholder="you@example.com"
						required
					/>
				</div>
				<div class="field">
					<label for="message">Your message</label>
					<textarea
						id="message"
						name="message"
						rows="5"
						placeholder="Project goals, timelines, and any helpful context."
						required></textarea>
				</div>

				<input
					type="hidden"
					name="_subject"
					value="New contact via Matthew Aisthorpe website"
				/>

				<div
					id="form-status"
					class="status"
					role="status"
					aria-live="polite"
					hidden
				>
				</div>

				<div class="form-footer">
					<button type="submit">
						<Icon icon="paper-plane-tilt" size="1.2em" />
						Send message
					</button>
				</div>
			</form>

			<div class="contact-info stack gap-4">
				<div class="info-card stack gap-2">
					<h3>Prefer direct email?</h3>
					<p>
						Drop me a line and include any links or artefacts that
						will help me prepare before we meet.
					</p>
					<CallToAction href="mailto:m.aisthorpe@outlook.com">
						Email me
						<Icon icon="arrow-right" size="1.1em" />
					</CallToAction>
				</div>

				<div class="info-card stack gap-3">
					<h3>Connect</h3>
					<ul class="list">
						<li>
							<Icon icon="linkedin-logo" size="1.2em" />
							<a
								href="https://www.linkedin.com/in/matthewaisthorpe/"
								>LinkedIn</a
							>
						</li>
						<li>
							<Icon icon="github-logo" size="1.2em" />
							<a href="https://github.com/beardydevadventures"
								>GitHub</a
							>
						</li>
						<li>
							<Icon icon="map-pin" size="1.2em" />
							<span>Based in Australia</span>
						</li>
						<li>
							<Icon icon="globe-hemisphere-east" size="1.2em" />
							<span>Working globally</span>
						</li>
					</ul>
				</div>
			</div>
		</section>
	</main>
</BaseLayout>

<script>
	const form = document.getElementById("contact-form") as HTMLFormElement | null;
	const status = document.getElementById("form-status");
	const emailField = document.getElementById("email") as HTMLInputElement | null;

	const setStatus = (message: string, variant?: string) => {
		if (!status) return;
		status.textContent = message;
		status.hidden = false;
		status.classList.remove("success", "error", "info");
		if (variant) status.classList.add(variant);
	};

	const isValidEmail = (value: string) =>
		/^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(value.trim());

	form?.addEventListener("submit", async (event) => {
		event.preventDefault();
		if (!emailField) return;

		const emailValue = emailField.value;
		if (!isValidEmail(emailValue)) {
			setStatus("Please enter a valid email address.", "error");
			emailField.focus();
			return;
		}

		setStatus("Sending your message...", "info");

		try {
			const response = await fetch(form.action, {
				method: form.method,
				body: new FormData(form),
				headers: { Accept: "application/json" },
			});

			if (response.ok) {
				setStatus(
					"Thanks for your message. I'll be in touch shortly with next steps and a suggested time to connect.",
					"success",
				);
				form.reset();
			} else {
				throw new Error("Failed to send");
			}
		} catch (error) {
			console.error(error);
			setStatus(
				"Something went wrong. Please try again or email me directly.",
				"error",
			);
		}
	});
</script>

<style>
	.contact {
		padding-bottom: 4rem;
	}

	.lede {
		color: var(--gray-300);
	}

	.status {
		display: grid;
		grid-template-columns: auto 1fr;
		gap: 1rem;
		align-items: center;
		padding: 1rem 1.25rem;
		border-radius: 1rem;
		border: 1px solid var(--gray-800);
		background: linear-gradient(
			135deg,
			var(--accent-overlay),
			transparent 90%
		);
		box-shadow: var(--shadow-sm);
	}

	.status[hidden] {
		display: none;
	}

	.status.info {
		color: var(--gray-200);
	}

	.status-title {
		font-weight: 600;
		color: var(--gray-0);
	}

	.contact-panel {
		display: grid;
		gap: 1.5rem;
	}

	.contact-panel h3 {
		color: var(--gray-0);
	}

	.contact-form {
		padding: 1rem;
		border-radius: 1rem;
		background: linear-gradient(
			145deg,
			var(--gray-999_40),
			var(--gray-900)
		);
		border: 1px solid var(--gray-800);
		box-shadow: inset 0 1px 0 hsla(var(--gray-999-basis), 0.25);
	}

	.field {
		display: grid;
		gap: 0.5rem;
	}

	.field label {
		font-weight: 600;
		color: var(--gray-100);
	}

	input,
	textarea {
		width: 100%;
		padding: 0.9rem 1rem;
		border-radius: 0.9rem;
		border: 1px solid var(--gray-800);
		background: var(--gray-50);
		color: var(--gray-800);
		font-size: 1rem;
		transition:
			border-color var(--theme-transition),
			box-shadow var(--theme-transition);
	}

	input::placeholder,
	textarea::placeholder {
		color: var(--gray-500);
	}

	input:focus,
	textarea:focus {
		outline: none;
		border-color: var(--accent-regular);
		box-shadow: 0 0 0 3px var(--accent-subtle-overlay);
	}

	textarea {
		resize: vertical;
		min-height: 180px;
	}

	.form-footer {
		display: flex;
		flex-direction: column;
		gap: 1rem;
		align-items: flex-start;
	}

	.hint {
		color: var(--gray-400);
		font-size: var(--text-sm);
	}

	button[type="submit"] {
		display: inline-flex;
		align-items: center;
		gap: 0.5rem;
		padding: 0.9rem 1.4rem;
		border-radius: 999px;
		border: none;
		background: var(--gradient-accent);
		color: var(--accent-text-over);
		font-weight: 700;
		box-shadow: var(--shadow-md);
		cursor: pointer;
		transition:
			transform 120ms ease,
			box-shadow 120ms ease,
			filter 120ms ease;
	}

	button[type="submit"]:hover {
		transform: translateY(-2px);
		box-shadow: var(--shadow-lg);
		filter: brightness(1.05);
	}

	button[type="submit"]:focus-visible {
		outline: 2px solid var(--accent-dark);
		outline-offset: 3px;
	}

	.status.success {
		border-color: var(--accent-regular);
	}

	.status.error {
		border-color: #d75a5a;
		color: #d75a5a;
	}

	.info-card {
		padding: 1.25rem;
		border-radius: 1rem;
		border: 1px solid var(--gray-800);
		background: var(--gray-999_40);
		box-shadow: var(--shadow-sm);
	}

	.info-card p {
		color: var(--gray-300);
	}

	.list {
		list-style: none;
		padding: 0;
		display: grid;
		gap: 0.75rem;
		margin: 0;
	}

	.list li {
		display: grid;
		grid-template-columns: auto 1fr;
		gap: 0.75rem;
		align-items: center;
		color: var(--gray-200);
	}

	.list a {
		color: var(--link-color);
		font-weight: 600;
		text-decoration: none;
	}

	.list a:hover,
	.list a:focus-visible {
		text-decoration: underline;
	}

	@media (min-width: 50em) {
		.contact-panel {
			grid-template-columns: 1.1fr 0.9fr;
		}
	}
</style>
